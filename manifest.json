{
  "manifest_version": 3,
  "name": "Highlight â†’ Ask ChatGPT",
  "version": "1.1.5",
  "description": "Highlight text, right-click, and send it to ChatGPT.",
  "permissions": ["contextMenus", "tabs", "scripting", "storage"],
  "host_permissions": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
  "background": { "service_worker": "background.js" },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "commands": {
    "ask-chatgpt": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Ask ChatGPT about selected text"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
